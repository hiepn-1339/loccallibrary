extends ../layout

block content
  h1= title
  if authors.length
    ul
      each author in authors
        li
          a(href='author/' + author.url) #{author.name} 
          |(#{author.dateOfBirth} - #{author.dateOfDeath})
  else
  p #{t('home.noAuthor')}


  hr
  p
    a(href='author/create') #{t('home.createAuthor')}
